generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  Male
  Female
  Other
}

model BookCons {
  id              String   @id @default(cuid())
  otpCode String @unique
  otpCodeCreatedAt DateTime @default(now())
  photo           String
  name            String   @db.VarChar(64)
  fatherName      String   @db.VarChar(64)
  grandFatherName String   @db.VarChar(64)
  gender          Gender
  dateOfBirth     DateTime
  placeOfBirth    String
  height          Float
  eyeColor        String
  hairColor       String
  occupation      String
  region          String
  country         String
  zone            String
  city            String
  woreda          String
  streetName      String
  kebele          String
  phoneNumber     String
  houseNo         String
  poBox           String?   // optional
  email           String    @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
